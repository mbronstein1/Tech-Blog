{{#each userPosts as |post|}}
{{> post-details}}
{{/each}}

<div class="card m-3" id="new-post-card">
  <div class="card-header">
    <h4 class="card-title">Create New Post</h4>
  </div>
  <form id="new-post-form" class="p-3">
    <div class="form-group">
      <label for="post-title">Title</label>
      <input type="text" class="form-control" id="post-title" aria-describedby="titleHelp">
    </div>
    <div class="form-group">
      <label for="post-content">Content</label>
      <textarea class="form-control" id="post-content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary w-100">Create</button>
  </form>
</div>
<div class="text-center m-3">
  <button id="new-post-btn" class="btn">+ New Post</button>
</div>